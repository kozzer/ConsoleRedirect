<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Company>WebKozzer</Company>
    <Description>Redirect Console text to an Event Handler.  Also supports passing objects, via Json serialization.</Description>
    <Copyright>Â© 2022 David Kozlowski</Copyright>
    <PackageProjectUrl>https://github.com/kozzer/ConsoleRedirect</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kozzer/ConsoleRedirect</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <SignAssembly>False</SignAssembly>
    <PackageId>KozzerTools.$(AssemblyName)</PackageId>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageReadmeFile>readme.md</PackageReadmeFile>
	<Authors>Kozzer</Authors>
	<NeutralLanguage>en-US</NeutralLanguage>
	<PackageTags>Console</PackageTags>
	<AssemblyVersion>1.0.2.0</AssemblyVersion>
	<FileVersion>1.0.2.0</FileVersion>
	<Version>1.0.2</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="6.0.4" />
  </ItemGroup>

  <ItemGroup>
	<None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
